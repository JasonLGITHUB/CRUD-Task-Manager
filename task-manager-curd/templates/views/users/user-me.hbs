    <div class="w3-container" > 
        <div class="w3-row"> 
        <div class="col-md-3">                      
        </div>                   
        <div class="col-xs-6 main">    
<style>
table {
  border-collapse: collapse;
  border-spacing: 0;
  width: 10%;
  border: 1px solid #ddd;

  margin: 0px auto;
    float: none; 
}

th, td {
  text-align: center;
  padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

tr:hover {background-color:#f5f5f5;

</style>

</head>
<body>

<h2>My Accout</h2>
<div style="overflow-x:auto;">
    <table class = "table">
 <thead>     
  <tr>
      <th>Name</th> 
      <th>Email</th> 
      <th>Password</th>
      <th>Age</th>  
      <th>Edit/Delete</th>
      
  </tr>
  </thead>
  <tbody>
 {{#each myProfile}}
  <tr> 
    <td>{{name}}</td>
    <td>{{email}}</td> 
    <td>{{password}}</td> 
    <td>{{age}}</td>
    <td>
                    <a href="/users/{{this._id}}/update">
                        <i class="fa fa-pencil fa-lg" aria-hidden="true" title="View more Details !"></i>
                    </a>
                   
                    <a href="/users/me/delete"onclick="return confirm('Are you sure to delete this record?');"/>
                        <i class="fa fa-trash fa-lg" aria-hidden="true" >
                         
                        </i>
                    </a>
                    
    </td>
     
    {{/each}}

  </tr>
   </tbody>
</table>  
</div>

<a href="/">  <button class="btn btn-success ml-auto mr-1" >Home <i class="fa fa-hand-o-left" aria-hidden="true"></i></button></a>  





<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
   
 <script>$("td").each(function() {
    if (this.innerText == '') {
    	this.closest('tr').remove();
    }
});
</script>



</body>
</html> 